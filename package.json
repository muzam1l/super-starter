{
  "name": "{workspace}",
  "private": true,
  "scripts": {
    "build": "bun run clean && bun run check && turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "db:generate": "bun --cwd packages/api db:generate",
    "db:push": "bun --cwd packages/api db:push",
    "db:studio": "bun --cwd packages/api db:studio",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md}\"",
    "clean": "turbo clean && rm -rf .turbo node_modules bun.lockb && bun i",
    "check": "bun run format && bun run lint"
  },
  "devDependencies": {
    "@types/bun": "^1.2.20",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@{workspace}/config": "workspace:*",
    "drizzle-kit": "latest",
    "eslint-plugin-drizzle": "^0.2.3",
    "prettier": "^3.4.2",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.35",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "trustedDependencies": [
    "es5-ext"
  ],
  "dependencies": {
    "@auth/drizzle-adapter": "^1.7.4",
    "@sinclair/typebox": "^0.34.13",
    "@typeschema/typebox": "^0.14.0",
    "drizzle-orm": "^0.38.4",
    "next": "^15.4.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^3.24.1"
  }
}